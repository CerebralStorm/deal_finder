<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Document Type</th>
      <th>Parcel number</th>
      <th>Filing date</th>
      <th>Deceased</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>Heir</th>
      <th>Contact info</th>
      <th>Assessed value</th>
      <th>Zillow value</th>
      <th>Reconveyances</th>
      <th>Trust Deeds</th>
      <th>Loan</th>
      <th>Value</th>
      <th>Loan to Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.document_type %></td>
        <td><%= lead.parcel_number %></td>
        <td><%= lead.filing_date %></td>
        <td><%= lead.deceased %></td>
        <td><%= lead.address %></td>
        <td><%= lead.city %></td>
        <td><%= lead.zip %></td>
        <td><%= lead.heir %></td>
        <td><%= lead.contact_info %></td>
        <td><%= lead.assessed_value %></td>
        <td><%= lead.zillow_value %></td>
        <td><%= lead.reconveyance_count %></td>
        <td><%= lead.trust_deed_count %></td>
        <td><%= lead.try(:parcel).try(:loan) %></td>
        <td><%= lead.try(:parcel).try(:value) %></td>
        <td><%= number_to_percentage(lead.loan_to_value) %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Letter', letter_notice_of_default_lead_path(lead) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

